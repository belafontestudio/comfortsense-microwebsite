


.ham
  width 100%
  background dark_bg
  transform translateZ(0)

  z-index 10000

  #ham
    padding 20px
    float left
    display inline-block
    max-width 15px
  #ham-logo
    padding-top 15px
    position relative
    left 20px
    display inline-block
    max-width 200px

.main-menu
  background-color dark_bg
  display none
  font-weight 200
  a
    text-decoration none
    display block
    color white
    padding 10px 10px
  ul
    margin 0
    padding 10px
    list-style none
    li
      cursor pointer
      text-transform uppercase
    #logo
      padding 20px 10px
      width 200px
      a
        padding 0
    #social
      img
        width 36px

    .hover
      border-bottom 4px solid dark_bg
      &:hover
        background rgba(52, 73, 94, 1.0)
        border-bottom 4px solid light_blue

    .active
      transform: translate3d(0, 0, 0);
      background rgba(52, 73, 94, 1.0)
      border-bottom 4px solid light_blue



.btn
  .active
    background transparent !important
    border-bottom 0 !important

