      top 95px


  .app-wrapper
    background url(../images/app-bg.jpg) no-repeat
    background-size cover
    height 500px

    .app-device
      text-align left
      lost-column 5/12
      height 100%
      transform scale(.7)
      position relative
      bottom 30px
      .app-phone
