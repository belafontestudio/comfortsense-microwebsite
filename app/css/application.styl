/////////////// >600

+above(600px)

  .owl-pagination
    padding-top 0

  span
    display inline-block

  .gallery-hero-wrapper
    .gallery-hero
      text-align center
      padding 40px 0
      text-align right

      .gallery-hero-img
        lost-column 5/10
        position relative
        right 30px
        padding-top 40px

        img
          max-height 345px

        #top-low
          position relative
          top 80px
          img
            max-height 212px
      .gallery-hero-text
        lost-column 5/10
        max-width 400px
        text-align left
        padding-top 100px
        color white





  .ilprogetto-wrapper
    lost-utility: clearfix;
    position relative
    z-index 101
    .center
      lost-center 800px
      div:first-child
        lost-column 4/10
        h2
          span
            &:last-child
              display inline-block

      div:last-child
        lost-column 6/10



  .living-lab-wrapper
    width 100%
    lost-utility: clearfix;
    .living-lab-image
      lost-column 8/12 2 0px
      overflow hidden
      margin 0
      min-height 100%
      position relative
      z-index 100
      box-shadow: 2px 0 5px 2px rgba(0,0,0,.4);
      img
        height 100%
        max-width none
        vertical-align bottom
    .living-lab-carousel
      lost-column 4/12 2 0px

      margin-top 0
      .living-lab-section
        padding 20px
        h2
          font-weight 200
          color light_blue
          span
            font-weight bold
