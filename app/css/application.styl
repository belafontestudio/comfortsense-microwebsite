        position absolute
        width 297px
      .app-carousel
        position relative
        top 70px
        left 19px
        width 257px
    .app-text
      background none
      padding 20px
      text-align left
      padding-top 100px


    .owl-pagination
      position: relative;
      bottom: 45px;
      background-color: black;





  .partners-wrapper
    height 100%
    lost-center 900px
    padding-bottom 150px
    padding-top 500px
    h2
      text-align left
    p
      text-align left
      color #4A4A4A
      display inline-block
    div
      padding 20px 0
      text-align center
    .top-stac
      margin-top 100px
    .decenter
      padding-top 50px
    .partners-grid-first
      position relative
      padding 0 0 50px 0
      display block

      div
        lost-waffle 1/3
        img
          max-width 100%
          vertical-align middle

          max-height 130px
          margin 0 auto
     .partners-grid-second
        padding 0
        div
          lost-waffle 1/4

    div
      img
        display inline-block
        max-width 100%
        vertical-align middle

  .footer-wrapper

    text-align auto
    lost-utility: clearfix;

    #design
      lost-column 5/10
      text-align left
      position relative
      left 10px
    #contact
      lost-column 5/10
      text-align right
      position relative
      right 10px

    p
      *
        display inline-block
