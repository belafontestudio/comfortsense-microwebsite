// Init



.gallery-hero-wrapper
  background url(../images/hero-texture.png)
  //background-color rgba(0,0,0,.4)
  .gallery-hero
    text-align center
    padding 40px 20px

    .gallery-hero-img
      width 40%
      margin 0 auto
      padding-top 40px
      vertical-align middle


    .gallery-hero-text
      color white
      h1
        line-height 30px
      h1#hero-main-text
        font-size 2em
        font-weight 200
        span
          &:first-child
            color light_blue
            font-weight bold
          &:last-child
            font-weight bold
      h1.hero-second-text
        font-weight 200
        font-size 2em
        span
          font-size .5em
          &:last-child
            font-weight bold
            font-size 1em




.ilprogetto-wrapper
  background url(../images/hero-texture.png)
  padding 20px
  text-align center
      color white
  h2
    line-height 30px
    font-size 1.8em
    font-weight 200
    span
      &:first-child
        color light_blue
      &:last-child
        font-weight bold
  p
    font-weight 200




.living-lab-image
  background url(../images/ll.png) no-repeat center
  background-size cover
.living-lab-carousel
  background dark_blue
  font-weight 200
  margin-top -10px
  .living-lab-section
    padding 20px
    h2
      font-weight 200
      color light_blue
      span
        font-weight bold
    h3
      font-weight 200
    p
      font-weight 200




.ecosystem-wrapper
  padding 20px
  text-align center
  .ecosystem-text
    h2
      color light_blue
      font-weight 200
      span
        color gray
        span
          font-weight bold
    p
      color gray
      font-weight 200


.app-wrapper
  width 100%
  .app-device
    text-align center
    .app-phone
      display none

  .app-text
    background url(../images/app-bg.jpg) no-repeat center
    padding 20px
    text-align center
    h2
      font-weight 200
      color light_blue
      span
        font-weight bold
    p
      font-weight 200


.partners-wrapper
  text-align center
  padding 50px
  h2
    color light_blue
    font-weight 200
  div
    padding 20px



.footer-wrapper
  background dark_bg
  color whitesmoke
  font-weight 200
  padding 20px 0
  text-align center
  a
    color white
    font-weight normal
  #design
    a
      text-decoration none


//////////////// >480








/////////////// >600

+above(600px)


  span
    display inline-block

  .gallery-hero-wrapper
    .gallery-hero
      text-align center
      padding 40px 0
      text-align right

      .gallery-hero-img
        lost-column 5/10
        position relative
        right 30px
        padding-top 40px
        #top-low
          position relative
          top 80px
      .gallery-hero-text
        lost-column 5/10
        max-width 400px
        text-align left
        padding-top 100px
        color white





  .ilprogetto-wrapper
    lost-utility: clearfix;
    position relative
    z-index 101
    .center
      lost-center 800px
      div:first-child
        lost-column 4/10
        h2
          span
            &:last-child
              display inline-block

      div:last-child
        lost-column 6/10



  .living-lab-wrapper
    width 100%
    lost-utility: clearfix;
    .living-lab-image
      lost-column 8/12 2 0px
      overflow hidden
      margin 0
      min-height 100%
      position relative
      z-index 100
      box-shadow: 2px 0 5px 2px rgba(0,0,0,.4);
      img
        height 100%
        max-width none
        vertical-align bottom
    .living-lab-carousel
      lost-column 4/12 2 0px

      margin-top 0
      .living-lab-section
        padding 20px
        h2
          font-weight 200
          color light_blue
          span
            font-weight bold
        h3
          font-weight 200
        p
          font-weight 200

  .ecosystem-wrapper
    padding 60px 20px
    text-align left
    lost-center 1024px
    lost-utility: clearfix;
    .ecosystem-text
      lost-column 4/12
    .ecosystem-image
      lost-column 7/12
      lost-move 1/12
      top 95px


  .app-wrapper
    background url(../images/app-bg.jpg) no-repeat
    background-size cover
    height 500px

    .app-device
      text-align left
      lost-column 5/12
      height 100%
      transform scale(.7)
      position relative
      bottom 30px
      .app-phone
        display block
        position absolute
        width 297px
      .app-carousel
        position relative
        top 70px
        left 19px
        width 257px
    .app-text
      background none
      padding 20px
      text-align left
      padding-top 100px


    .owl-pagination
      position: relative;
      bottom: 45px;
      background-color: black;





  .partners-wrapper
    height 100%
    lost-center 900px
    h2
      text-align left
    div
      padding 0
    .partners-grid-first
      padding 0
      .decenter
        padding-top 30px
      div
        lost-waffle 1/4
        img
          max-width 100%
          vertical-align middle

          max-height 130px
          margin 0 auto
    // .partners-grid-second
    //   padding 0
    //   div
    //     lost-waffle 1/4

    img
      display inline-block

      vertical-align middle

  .footer-wrapper

    text-align auto
    lost-utility: clearfix;

    #design
      lost-column 5/10
      text-align left
      position relative
      left 10px
    #contact
      lost-column 5/10
      text-align right
      position relative
      right 10px

    p
      *
        display inline-block
