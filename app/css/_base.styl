

// COLORS

dark_bg = #252C33;
dark_blue = #33526F;
medium_blue = #2BB4E1;
light_blue = #63C7EA;
button_blue = #28A6DB;


*
  &:focus
    outline 0


html, body
  //lost-utility edit
  -webkit-overflow-scrolling touch
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  border 0
  margin 0
  width 100%
  height 100%
  font-size 16px
  font-family 'Titillium Web', Arial, Sans-Serif !important;
  font-weight normal
  color white

img
  max-width 100%


a
  color light_blue

.btn
  background button_blue
  border-radius 3px
  border 0
  max-width 150px
  text-align center
  display inline-block
  padding 6px 20px
  &:hover
    opacity .9
  a
    color white
    font-weight 400
    text-decoration none

h1, h2
  text-transform uppercase

.center
  lost-center 1024px



+above(600px)
  .owl-pagination
    .active
      span
        background whitesmoke !important
    span
      background transparent !important
      border 2px solid whitesmoke
